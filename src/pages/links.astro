---
import { SEO } from "astro-seo";
import { Image } from "astro:assets";
import avatar from "@/images/new_avatar.webp";
import Icon from "@/components/Icon.astro";
import "@/styles/global.css";

const REFERRAL_LINKS = [
  {
    label: "Bitunix",
    description: "No KYC required · Low fees",
    url: "https://www.bitunix.com/register?vipCode=pjSc",
    image: "/assets/bitunix-logo.png",
  },
  {
    label: "BingX",
    description: "Global Top 10 Exchange · Low fees",
    url: "https://bingx.com/invite/JGNQPF",
    image: "/assets/bingx-logo.png",
  },
];

const SOCIALS = [
  {
    url: "https://github.com/jose-donato",
    icon: "mdi-github",
    name: "GitHub",
  },
  {
    url: "https://twitter.com/josedonato__",
    icon: "proicons-x-twitter",
    name: "Twitter",
  },
  {
    url: "https://www.linkedin.com/in/jose-donato/",
    icon: "mdi-linkedin",
    name: "LinkedIn",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script is:inline>
      (function () {
        const theme =
          localStorage.getItem("theme") ||
          (window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light");
        document.documentElement.classList.toggle("dark", theme === "dark");
      })();
    </script>
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <SEO
      title="Links | José Donato"
      description="Quick links to my socials and exchange referrals."
      openGraph={{
        basic: {
          type: "website",
          title: "Links | José Donato",
          image: "/og_image.png",
        },
      }}
      twitter={{
        card: "summary_large_image",
        image: "/og_image.png",
      }}
    />
  </head>
  <body class="min-h-screen flex flex-col items-center justify-center px-4 py-12 relative overflow-hidden">
    <!-- Ambient background -->
    <div class="fixed inset-0 bg-grid-pattern pointer-events-none"></div>
    <div class="fixed inset-0 bg-gradient-to-b from-bullish-500/5 via-transparent to-bullish-500/5 pointer-events-none"></div>
    
    <div class="relative z-10 w-full max-w-md mx-auto flex flex-col items-center gap-6">
      <!-- Profile Section -->
      <div class="flex flex-col items-center gap-4 animate-fade-in">
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-bullish-500/50 to-bullish-400/50 rounded-full blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <Image
            src={avatar}
            class="relative h-28 w-24 object-cover shadow-2xl ring-2 ring-border-primary/30 rounded-xl avatar-glow"
            alt="José Donato"
          />
        </div>
        <div class="text-center">
          <h1 class="text-2xl font-bold text-text-primary mb-1">José Donato</h1>
          <p class="text-text-muted text-sm">Fullstack Engineer · Trading Tools</p>
        </div>
      </div>

      <!-- Socials Section (right after profile) -->
      <div class="flex items-center gap-3 animate-fade-in" style="animation-delay: 100ms">
        {SOCIALS.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noreferrer noopener"
            class="social-icon-inline group"
            title={social.name}
          >
            <Icon id={social.icon} className="w-5 h-5 text-text-muted group-hover:text-text-primary transition-colors duration-300" />
          </a>
        ))}
      </div>

      {/* OpenBB Workspace - Commented out for now
      <a
        href="https://pro.openbb.co"
        target="_blank"
        rel="noreferrer noopener"
        class="featured-link group animate-fade-in w-full"
        style="animation-delay: 150ms"
      >
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 w-12 h-12 bg-bullish-500/10 rounded-xl flex items-center justify-center">
            <svg viewBox="0 0 255 127" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-7 h-auto text-white"><path d="M151.404 103.189v-7.937h71.733v15.874h-71.733v-7.937Zm0-63.5v-7.937h87.66v15.874h-87.66V39.69Zm95.628-23.815H135.468V127h103.596V79.374h-87.66V63.5H255V15.874h-7.968Zm-215.16 87.315v-7.937h71.733v15.874H31.873v-7.937Zm-15.936-63.5v-7.937h87.66v15.874h-87.66V39.69ZM119.532 0v15.874H0V63.5h103.596v15.874h-87.66V127h103.596V15.874h15.936V0h-15.936Z" fill="currentColor"></path></svg>
          </div>
          <div class="flex-1 min-w-0">
            <span class="font-semibold text-text-primary group-hover:text-bullish-400 transition-colors duration-300">OpenBB Workspace</span>
            <p class="text-xs text-text-muted">AI-powered investment research platform</p>
          </div>
          <Icon
            id="ic-outline-arrow-forward"
            className="w-5 h-5 text-text-muted opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
          />
        </div>
      </a>

      <div class="w-full h-px bg-gradient-to-r from-transparent via-border-primary to-transparent"></div>
      */}
      <!-- Exchanges Section -->
      <div class="w-full flex flex-col gap-3 mt-2 animate-fade-in" style="animation-delay: 250ms">
        <div class="section-header">
          <span class="section-label">Exchanges</span>
          <p class="text-xs text-text-muted/70 mt-0.5 px-1">
            Support my work by signing up with a referral
          </p>
        </div>
        {REFERRAL_LINKS.map((link, index) => (
          <a
            href={link.url}
            target="_blank"
            rel="noreferrer noopener"
            class="link-card group"
            style={`animation-delay: ${(index + 1) * 100 + 200}ms`}
          >
            <div class="flex items-center gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-bg-tertiary rounded-xl flex items-center justify-center overflow-hidden">
                <img src={link.image} alt={link.label} class="w-8 h-8 object-contain" />
              </div>
              <div class="flex-1 min-w-0">
                <span class="font-semibold text-text-primary group-hover:text-bullish-400 transition-colors duration-300">{link.label}</span>
                <p class="text-xs text-text-muted">{link.description}</p>
              </div>
              <Icon
                id="ic-outline-arrow-forward"
                className="w-5 h-5 text-text-muted opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
              />
            </div>
          </a>
        ))}
      </div>

      <!-- Work Section -->
      <div class="w-full flex flex-col gap-3 mt-4">
        <span class="section-label">Work</span>
        <a
          href="https://openbb.co"
          target="_blank"
          rel="noreferrer noopener"
          class="link-card group"
          style="animation-delay: 500ms"
        >
          <div class="flex items-center gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-bg-tertiary rounded-xl flex items-center justify-center">
              <svg viewBox="0 0 255 127" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-7 h-auto text-text-primary group-hover:text-bullish-400 transition-colors duration-300"><path d="M151.404 103.189v-7.937h71.733v15.874h-71.733v-7.937Zm0-63.5v-7.937h87.66v15.874h-87.66V39.69Zm95.628-23.815H135.468V127h103.596V79.374h-87.66V63.5H255V15.874h-7.968Zm-215.16 87.315v-7.937h71.733v15.874H31.873v-7.937Zm-15.936-63.5v-7.937h87.66v15.874h-87.66V39.69ZM119.532 0v15.874H0V63.5h103.596v15.874h-87.66V127h103.596V15.874h15.936V0h-15.936Z" fill="currentColor"></path></svg>
            </div>
            <div class="flex-1 min-w-0">
              <span class="font-semibold text-text-primary group-hover:text-bullish-400 transition-colors duration-300">OpenBB</span>
              <p class="text-xs text-text-muted">Building the AI Workspace for Finance</p>
            </div>
            <Icon
              id="ic-outline-arrow-forward"
              className="w-5 h-5 text-text-muted opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
            />
          </div>
        </a>
      </div>

      <!-- CTA Button -->
      <a
        href="/"
        class="cta-button group animate-fade-in"
        style="animation-delay: 600ms"
      >
        <span>Learn more about me</span>
        <Icon id="ic-outline-arrow-forward" className="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" />
      </a>
    </div>
  </body>
</html>

<style>
  @reference "@/styles/global.css";
  
  .avatar-glow {
    box-shadow:
      0 8px 25px -8px rgba(0, 0, 0, 0.4),
      0 0 0 1px rgba(255, 255, 255, 0.1),
      0 0 30px rgba(59, 130, 246, 0.15);
  }

  .link-card {
    @apply w-full border rounded-xl px-4 py-4 transition-all duration-300 ease-out;
    background: color-mix(in srgb, var(--bg-secondary) 80%, transparent);
    backdrop-filter: blur(4px);
    border-color: color-mix(in srgb, var(--border-primary) 50%, transparent);
    opacity: 0;
    animation: slideUp 0.5s ease-out forwards;
  }

  .link-card:hover {
    border-color: color-mix(in srgb, var(--bullish-500) 50%, transparent);
    box-shadow: 0 10px 25px -5px color-mix(in srgb, var(--bullish-500) 10%, transparent);
    transform: translateY(-2px);
  }

  .featured-link {
    @apply w-full border rounded-xl px-4 py-4 transition-all duration-300 ease-out;
    background: color-mix(in srgb, var(--bg-secondary) 90%, transparent);
    backdrop-filter: blur(4px);
    border-color: color-mix(in srgb, var(--bullish-500) 30%, transparent);
  }

  .featured-link:hover {
    border-color: var(--bullish-500);
    box-shadow: 0 10px 30px -5px color-mix(in srgb, var(--bullish-500) 20%, transparent);
    transform: translateY(-2px);
  }

  .social-icon-inline {
    @apply w-10 h-10 rounded-full flex items-center justify-center transition-all duration-300 ease-out;
    background: color-mix(in srgb, var(--bg-tertiary) 60%, transparent);
  }

  .social-icon-inline:hover {
    background: color-mix(in srgb, var(--bg-quaternary) 80%, transparent);
    transform: scale(1.1);
  }

  .cta-button {
    @apply mt-6 px-6 py-3 rounded-full font-semibold text-sm flex items-center gap-2 transition-all duration-300 ease-out;
    background: var(--bg-primary);
    color: var(--text-primary);
    border: 1px solid var(--border-primary);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .cta-button:hover {
    background: var(--bg-secondary);
    border-color: var(--border-hover);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
  }

  .section-header {
    @apply mb-1;
  }

  .section-label {
    @apply text-xs font-medium uppercase tracking-wider text-text-muted/60 px-1;
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
